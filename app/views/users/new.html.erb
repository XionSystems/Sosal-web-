<div class="panel">
	<div class="new_user">
		<h2>[<em>Insert You</em>]</h2>
		<div class="session_form">
		<%= form_for(@user, :validate => true) do |f| %>
		<%= render 'shared/error_explaination', :object => f.object %>
		<div class="session_fields">
			<%= f.text_field :username, :placeholder => "Username*" %>
		</div><br \>
		<div class="session_fields">
			<%= f.text_field :name, :placeholder => "Name*" %>
		</div><br \>
		<div class="session_fields">
			<%= f.text_field :email, :placeholder => "Email*" %>
		</div><br \>
		<div class="session_fields">
			<%= f.password_field :password, :placeholder => "Password*" %>
		</div><br \>
		<div class="session_fields">
			<%= f.password_field :password_confirmation, :placeholder => "Confirm*" %>
		</div><br \>
		<div class="session_fields">
			<input class="text" id="user_birthday" name="user[birthday]" placeholder = "Birthday*">
		</div><br \>
			<%= f.submit "Sign Up!", :class => "create_buttons" %>
		<% end %>
		<div id="agreement">
			<p>By clicking on the create button, you agree to both our <%= link_to "terms of use", '#' %> and our <%= link_to "privacy", '#' %> policies.</p>
		</div>
		</div>
	</div>
</div>