<div class="home">
	<div class="home_field">
		<div class="home_page_signin">
			<%= form_for(:session, :url => sessions_path, :method => 'post')  do |f| %>
			<div class="home_signin_fields">
				<%= f.text_field :email, :placeholder => "Email" %> <%= f.password_field :password, :placeholder => "Password" %>
			</div>
			<div id="remem_me">	
			<%= check_box_tag :remember_me, 1, params[:remember_me] %>
			<%= label_tag :remember_me %>
			</div><br \>
			<em><%= link_to "(forgot?)", '#', :id => "forgot_home" %></em>
			<br \><br \>
			<div class="action">
				<%= f.submit "Sign In", :class=> 'button'%>
			</div>
			<% end %>
		</div>
		
		<h2 class="pitch"><center>[<em>Your web, simplified</em>]</center></h2>
		<%= link_to home_photo, '#', :id => "play_button"%>
		
		<p id="information">Click on the Sosal to learn more!</p>
		<%= link_to "Create Account!", new_user_path, :class => "big_create_button" %> 
		
		<script>
		$.fx.speeds._default = 1000;
		$(function() {
			$( "#dialog" ).dialog({
				autoOpen: false
			});

			$( "#play_button" ).click(function() {
				$( "#dialog" ).dialog( "open" );
				return false;
			});
		});
		</script>
		<div id="dialog" title="Welcome!">
			<p>Hello World!</p>
		</div>
		<div class="third_party_source">
				<p id="thrd_1"><div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="" send="false" layout="button_count" width="500" show_faces="true" font=""></fb:like></p>
				<p id="thrd_2"><g:plusone size="small"></g:plusone>
				</p>
				<script type="text/javascript">
				  (function() {
				    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
				    po.src = 'https://apis.google.com/js/plusone.js';
				    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
				  })();
				</script>
			 	<p id="thrd_3"><a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script></p>
		</div>
	
</div>